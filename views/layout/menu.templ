package layout

import "lesson/views/components"

templ Menu() {
    @MenuStyle()
    
    <div class="menu">
        <a href="/">
            <img src="/public/images/logo.svg"/>
        </a>
        <div class="menu__right">
            <a class="menu__right-link" href="/login">Войти</a>
            @components.LinkButton("/register"){
                <span>Зарегистрироваться</span>
            }
        </div>
    </div>
}

templ MenuStyle() {
    <style>
        .menu{

            display: flex;
            flex-direction: row;
            justify-content: space-between;
            padding: 20px 0;
            max-width: 1290px;
            align-items: center;
            width: 100%;
            margin-bottom: 100px;
            
        }
        .menu__logo {

        }
        .menu__right{
            display: flex;
            gap: 20px;
            align-items: center;
        }
        .menu__right-link{
            text-decoration: none;
            color: var(--color-white);
            font-size: 16px;
            cursor: pointer;
        }
        .menu__right-link:hover{
            color: #9f9f9f;    
        }
    </style>
}